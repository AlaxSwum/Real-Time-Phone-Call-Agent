  "functions": {
    "api/webhook.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/voice",
      "destination": "/api/webhook"
    },
    {
      "source": "/webhook/voice", 
      "destination": "/api/webhook"
    },
    {
      "source": "/webhook/recording",
      "destination": "/api/webhook"
    },
    {
      "source": "/health",
      "destination": "/api/webhook"
    },
    {
      "source": "/debug",
      "destination": "/api/webhook"
    },
    {
      "source": "/twilio-config",
      "destination": "/api/webhook"
    }
  ]
} 