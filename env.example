# Real-Time Phone Call Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# AssemblyAI API Key - REQUIRED for real-time transcription (MUCH MORE ACCURATE!)
# Get your free API key at: https://www.assemblyai.com/
# AssemblyAI provides 93.3% accuracy vs other providers' 90.76%
# Cost: Only $0.15/hour (much cheaper than alternatives!)
# Free tier: 333 hours of streaming audio included
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Twilio Configuration - REQUIRED for phone bridge functionality
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Bridge Target Phone Number - REQUIRED
# The phone number to bridge calls to (format: +1234567890)
BRIDGE_TARGET_NUMBER=+447494225623

# OpenAI API Key - OPTIONAL for AI analysis
# Only needed if you want AI-powered intent analysis
OPENAI_API_KEY=your_openai_api_key_here

# N8N Webhook URL - OPTIONAL for workflow automation
# Only needed if you want to trigger automated workflows
N8N_WEBHOOK_URL=your_n8n_webhook_url_here

# Environment
NODE_ENV=production

# Server Configuration
PORT=3000
ALLOWED_ORIGINS=https://yourdomain.com

# CORS Configuration (comma-separated for production)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database (if needed)
# DATABASE_URL=your_database_url_here

# Additional Configuration
# LOG_LEVEL=info 